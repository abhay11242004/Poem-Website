{{> Header }}

<form action="{{path 'poems'}}/{{ poem.id }}" method="POST" id="edit-poem-form">
    <input type="hidden" name="method" value="PUT">
    <div class="loginContainer">
        <div class="loginContainer">
            <h1>Update Poem</h1>
            <div class="register">
                <p for="title">Title</p>
                <input type="text" name="title" placeholder="Enter new title" id="title" value="{{poem.title}}">
            </div>
            <div class="register">
                <p for="description">Description</p>
                <textarea name="description" placeholder="Enter Description" id="description">{{poem.description}}</textarea>
            </div>
            <div>
                <select name="category" id="category">
                    <option value="None">None</option>
                    <option value="Love">Love</option>
                    <option value="Sadness">Sadness</option>
                    <option value="Happiness">Happiness</option>
                    <option value="Horror">Horror</option>
                </select>
            </div>
            <div>
                <button ype="submit" value="Edit" id="edit-poem-form-submit-button">Update</button>
            </div>
			<p class="modify" id="{{poem.categoryId}}"></p>
        </div>
    </div>
</form>
<script>
	let category = document.getElementById("category")
	let element = document.getElementsByClassName("modify")
	let categoryId = element[0].id
	if (categoryId == 1)
	{
		category.value = "None"
	}
	else if (categoryId == 2)
	{
		category.value = "Love"
	}
	else if (categoryId == 3)
	{
		category.value = "Sadness"
	}
	else if (categoryId == 4)
	{
		category.value = "Happiness"
	}
	else 
	{
		category.value = "Horror"
	}
</script>

{{> Footer }}
